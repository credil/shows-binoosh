#Time in seconds for refresh
$waitTime = 1;

$nextImageURL = determineNextImage();

load $nextImageURL

while(true)
{
	$whereShouldIBeURL
	$whereShouldIBe

	$whereShouldIBe = get($whereShouldIBeURL)

	if($whereShouldIBe != window.location) {
		window.location = $whereShouldIBe;
	}
	
	sleep $waitTime;
}


